@model IEnumerable<Employee>
@ViewBag.Message
<h1>All Employees</h1>

<!-- Create Employee Button -->
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

<br />
<br />

<!-- Search Form -->
<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

<!-- Check if there are employees in the model -->
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Age)</th>
                <th>@Html.DisplayNameFor(d => d.Address)</th>
@*                 @Html.DisplayNameFor(d=>d.Department)
 *@                <th>@Html.DisplayNameFor(d => d.Salary)</th>
                <th>@Html.DisplayNameFor(d => d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(d => d.HiringDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(m => employee.Salary)</td>
                    <td>@Html.DisplayFor(m => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HiringDate.ToString("MM/dd/yyyy")</td>

                    <partial name="_ActionButtonsPartialView" model="@employee.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{<div class="mt-5 alert alert-warning">
    <h3>No employees found.</h3>
    </div>

    <div class="mt-5 alert alert-danger">
        <h3>@ViewBag.Message</h3>
    </div>

    <div class="mt-5 alert alert-primary">
        <h3>@ViewData["TextMessage"]</h3>
    </div>
    <div class="mt-5 alert alert-dark">
        <h3>@TempData["TextMessage2"]</h3>
    </div>
}
